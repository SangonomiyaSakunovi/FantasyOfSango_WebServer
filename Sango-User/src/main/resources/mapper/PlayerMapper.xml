<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantasy.sangoUser.mapper.PlayerMapper">
    <sql id="Basic_Column">
        Id,NickName
    </sql>


    <insert id="insertPlayer" parameterType="com.fantasy.sangoUser.entity.Player" useGeneratedKeys="true" keyProperty="playerId">
        insert into FantasyOfSango_Player.dbo.Players(NickName)
        values (#{nickName})
    </insert>

    <select id="selectPlayerByPlayerId" resultType="com.fantasy.sangoUser.entity.Player">
        select <include refid="Basic_Column"/>
        from FantasyOfSango_Player.dbo.Players
        where Id=#{playerId}
    </select>
</mapper>